{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "baseBranches": [
    "main",
    "/^v[0-9]+/"
  ],
  "rebaseWhen": "conflicted",
  "pip_requirements": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchBaseBranches": [ "/^v[0-9]+/" ],
      "groupName": "all dependencies"
    }
  ]
}
